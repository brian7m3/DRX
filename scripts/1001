#!/bin/bash

# Simple test script for DRX script execution feature
# Save this as "1001" in your scripts directory and make it executable with:
# chmod +x 1001

echo "===== DRX Script Test ====="
echo "Script execution time: $(date -u '+%Y-%m-%d %H:%M:%S') UTC"
echo "Current user: $(whoami)"
echo "Script directory: $(dirname $(readlink -f $0))"
echo "Hostname: $(hostname)"
echo "System uptime: $(uptime)"
echo "=========================="

# Return success
exit 0